<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:paddingBottom="10dp">

    <com.jaydenxiao.common.commonwidget.ClearEditText
        android:id="@+id/et_login_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_line_02"
        android:layout_alignLeft="@+id/et_login_pwd"
        android:layout_alignRight="@+id/et_login_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:background="@null"
        android:ems="11"
        android:hint="请输入登录名"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textSize="18sp" />

    <requestFocus />

    <TextView
        android:id="@+id/tv_line_02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/et_login_pwd"
        android:layout_alignLeft="@+id/et_login_pwd"
        android:layout_alignRight="@+id/et_login_pwd"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF" />

    <com.jaydenxiao.common.commonwidget.ClearEditText
        android:id="@+id/et_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_line_01"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@null"
        android:hint="请输入密码"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_line_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/btn_login"
        android:layout_alignLeft="@+id/et_login_pwd"
        android:layout_alignRight="@+id/et_login_pwd"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_blue_maincolor"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="" />

    <Button
        android:id="@+id/btn_login_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@null"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_login_fgtpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:background="@null"
        android:text="忘记密码"
        android:textColor="@color/white"
        android:textSize="14sp" />
</RelativeLayout>